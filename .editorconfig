root = true


[*]
charset=utf-8
end_of_line=crlf
insert_final_newline=false
trim_trailing_whitespace = true
indent_style=space
indent_size=4


[*.json]
indent_style=space
indent_size=2


[{*.yml,*.yaml}]
indent_style=space
indent_size=2


[*.py]
max_line_length = 119


[*.bat]
indent_style = tab


[*.{cfg, txt, text}]
max_line_length = 500


[LICENSE]
insert_final_newline = false


[Makefile]
indent_style = tab


[*.{diff,patch}]
trim_trailing_whitespace = false
